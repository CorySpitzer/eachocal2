<div class="container mt-4">
  <div class="calendar-nav mb-4">
    <%= link_to today_path(date: @prev_date), class: "nav-btn" do %>
      <i class="bi bi-chevron-left"></i>
    <% end %>
    <h1 class="calendar-title mb-0">One Day Agenda</h1>
    <%= link_to today_path(date: @next_date), class: "nav-btn" do %>
      <i class="bi bi-chevron-right"></i>
    <% end %>
  </div>

  <div class="text-center mb-4">
    <h4 class="text-muted">
      <%= @current_date.strftime("%A, %B %d, %Y") %>
      <% if @current_date == Date.current %>
        <span class="badge bg-primary ms-2">Today</span>
      <% end %>
    </h4>
  </div>
  
  <% if @today_skills.any? %>
    <div class="list-group">
      <% @today_skills.each do |skill| %>
        <div class="list-group-item">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h5 class="mb-1"><%= skill.name %></h5>
              <% if skill.subjects.any? %>
                <small class="text-muted"><%= skill.subjects.map(&:name).join(", ") %></small>
              <% else %>
                <small class="text-muted">No subjects assigned</small>
              <% end %>
            </div>
            <% if skill.rating %>
              <span class="badge bg-primary rounded-pill">Rating: <%= skill.rating %></span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <p class="mb-0">No skills scheduled for practice on this date.</p>
    </div>
  <% end %>
</div>

<% content_for :head do %>
  <style>
    .calendar-nav {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
    }

    .nav-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 32px;
      height: 32px;
      border-radius: 50%;
      border: 1px solid #dee2e6;
      color: #6c757d;
      text-decoration: none;
      transition: all 0.2s;
    }

    .nav-btn:hover {
      background-color: #f8f9fa;
      color: #495057;
      border-color: #ced4da;
    }

    .calendar-title {
      font-size: 1.75rem;
      margin: 0;
      padding: 0 0.5rem;
      color: #212529;
    }
  </style>
<% end %>
