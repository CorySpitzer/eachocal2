<%# <h1>Welcome to Echo Cal</h1> %>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 text-center">
      <%# <p class="lead">
        Manage your calendar with ease using Echo Cal
      </p> %>
      <div class="container">
        <h1>EchoCal:</h1>
        <h2>A Skill Schedule Manager</h2>
        <p class="description">Utilize expanding spaced repetition to maintain skill mastery while using less time and effort over time.</p>
        <div class="input-section" data-controller="subject-skills">
          <div class="form-group mb-3">
            <%= select_tag :subject_id,
                options_from_collection_for_select(current_user.subjects, :id, :name),
                { 
                  prompt: "Select a Subject (optional)",
                  class: "form-select",
                  data: {
                    subject_skills_target: "subjectSelect",
                    action: "change->subject-skills#updateSkillsDropdown",
                    subjects: current_user.subjects.map { |s| 
                      { 
                        id: s.id, 
                        name: s.name, 
                        skills: s.skills.map { |skill| { id: skill.id, name: skill.name } }
                      }
                    }.to_json
                  }
                } %>
            <div class="mt-2">
              <%= link_to "Create New Subject", new_subject_path, class: "btn btn-sm btn-outline-primary" %>
            </div>
          </div>
          <div class="form-group mb-3">
            <label class="form-label">Select or Create a Skill</label>
            <div class="d-flex gap-2">
              <%= select_tag :skill_id,
                  options_for_select([["Select Existing Skill", ""]]),
                  class: "form-select",
                  data: { subject_skills_target: "skillSelect" } %>
              <input type="text" 
                     id="newSkillInput" 
                     class="form-control" 
                     placeholder="Or enter a new skill">
            </div>
          </div>
          <div class="form-group mb-3">
            <input type="date" id="startDate" class="form-control">
          </div>
          <button id="generateBtn" class="btn btn-primary">Generate</button>
        </div>
        <div id="skillList" class="skill-list mt-4">
            <!-- Skills will be added here dynamically -->
        </div>
      </div>
    </div>
  </div>
</div>
