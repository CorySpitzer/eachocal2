<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Subjects</h1>
    <%= link_to 'New Subject', new_subject_path, class: 'btn btn-primary' %>
  </div>

  <div class="row">
    <% @subjects.each do |subject| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= subject.name %></h5>
            <p class="card-text text-muted"><%= subject.description %></p>
            <div class="mb-3">
              <strong>Skills:</strong>
              <div class="skill-tags">
                <% subject.skills.each do |skill| %>
                  <span class="badge bg-secondary me-1"><%= skill.name %></span>
                <% end %>
              </div>
            </div>
            <div class="card-actions">
              <%= link_to 'Edit', edit_subject_path(subject), class: 'btn btn-sm btn-outline-primary me-2' %>
              <%= button_to 'Delete', subject_path(subject), method: :delete, class: 'btn btn-sm btn-outline-danger', form: { style: 'display: inline-block' }, data: { turbo_confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
